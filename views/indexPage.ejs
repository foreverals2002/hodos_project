    </form>
    <div class="team_status">
        <p class="status_title">진행 상황</p>
        <p class="team_name"><%=team1.name%></p>
        <p class="status_detail"><%=team1.success[0]%> <%=team1.success[1]%> <%=team1.success[2]%></p>
        <p class="team_name"><%=team2.name%></p>
        <p class="status_detail"><%=team2.success[0]%> <%=team2.success[1]%> <%=team2.success[2]%></p>
        <p class="team_name"><%=team3.name%></p>
        <p class="status_detail"><%=team3.success[0]%> <%=team3.success[1]%> <%=team3.success[2]%></p>
    </div>
</body>
</html>